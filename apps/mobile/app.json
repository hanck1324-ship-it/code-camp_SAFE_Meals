{
  "expo": {
    "name": "SafeMeals",
    "slug": "safemeals",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "safemeals",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safemeals.app",
      "infoPlist": {
        "NSCameraUsageDescription": "바코드 스캔을 위해 카메라 접근이 필요합니다."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.safemeals.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@portone/react-native-sdk/plugin",
      "@react-native-google-signin/google-signin",
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "바코드 스캔을 위해 카메라 접근이 필요합니다."
        }
      ],
      "expo-dev-client"
    ],
    "extra": {
      "webviewUrl": "http://172.16.2.168:3000",
      "googleAndroidClientId": "90298941939-2fajkrcm5hal978812ut42nb7lgtfvou.apps.googleusercontent.com",
      "googleIosClientId": "90298941939-iOS클라이언트ID를여기에입력하세요.apps.googleusercontent.com",
      "googleWebClientId": "90298941939-27osmtlm0v9ps2ss5jk3eg389135pn21.apps.googleusercontent.com",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a2b1f40f-c82a-40b3-ab9b-85d4e3e0d9c4"
      }
    },
    "experiments": {
      "typedRoutes": true
    },
    "owner": "safemeals"
  }
}
