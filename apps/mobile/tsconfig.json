{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "types": ["react", "react-native", "expo-router"],
    "paths": {
      "@/*": ["./*"],
      "@safemeals/shared": ["../../packages/shared/src"],
      "@safemeals/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
